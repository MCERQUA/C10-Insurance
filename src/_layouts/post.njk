---
layout: base.njk
---

<article class="blog-post">
  <div class="container">
    <header class="post-header">
      <h1>{{ title }}</h1>
      <div class="post-meta">
        <time datetime="{{ page.date | date: '%Y-%m-%d' }}">{{ page.date | dateReadable }}</time>
        {% if author %}
          <span class="author">by {{ author }}</span>
        {% endif %}
        {% if tags and tags.length > 0 %}
          <div class="tags">
            {% for tag in tags %}
              {% if tag != "blog" %}
                <span class="tag">{{ tag }}</span>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </header>
    
    <div class="post-content">
      {{ content | safe }}
    </div>
    
    <footer class="post-footer">
      <a href="/blog/" class="back-to-blog">‚Üê Back to Blog</a>
    </footer>
  </div>
</article>